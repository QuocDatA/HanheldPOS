<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="progress"
            type="Integer" />

        <variable
            name="fileIndex"
            type="Integer" />

        <variable
            name="totalFiles"
            type="Integer" />

    </data>

    <com.google.android.material.card.MaterialCardView style="@style/Base.MaterialCardView">

        <LinearLayout
            style="@style/RootLayout.WrapHeight"
            android:background="@color/surface"
            android:padding="@dimen/_8sdp">

            <include layout="@layout/spacing_vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.diadiem.pos_components.PTextView
                    android:id="@+id/downloadTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{title ?? ``}"
                    android:textStyle="bold"
                    tools:text = "Downloading..."
                    app:useFontStyle="bold"
                    app:useTextHeader="h4"/>

                <com.diadiem.pos_components.PTextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{title ?? ``}"
                    android:textStyle="bold"
                    tools:text = "Downloading..."
                    app:useFontStyle="normal"
                    app:useTextHeader="h5"/>

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.diadiem.pos_components.PTextView
                        android:layout_weight="1"
                        android:id="@+id/tvDownloadSpeed"
                        style="@style/TextAppearance.Primary"
                        android:gravity="center|start"
                        android:text="@{String.format(`%d/%d`, fileIndex ?? 1, totalFiles ?? 1)}"
                        tools:text="1/100"
                        app:useTextHeader="h6"/>

                    <com.diadiem.pos_components.PTextView
                        android:layout_weight="1"
                        android:id="@+id/tvProgressCount"
                        style="@style/TextAppearance.Primary"
                        android:gravity="center|end"
                        android:text="@{String.format(`%d/%d`, fileIndex ?? 1, totalFiles ?? 1)}"
                        tools:text="1/100"
                        app:useTextHeader="h6"/>
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/spacing_vertical" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>