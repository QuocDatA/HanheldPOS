<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dataVM"
            type="com.hanheldpos.ui.screens.product.ProductDetailDataVM" />

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.product.ProductDetailVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_border_top">

            <LinearLayout style="@style/ProductInfoQuantityContainer">

                <ImageButton
                    android:id="@+id/btn_minus_quantity"
                    style="@style/ProductInfoButtonAdjust"
                    android:src="@drawable/ic_remove_primary" />

                <TextView
                    android:id="@+id/txt_quantity"
                    style="@style/ProductInfoFood.FixedSize"
                    android:layout_width="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="1" />

                <ImageButton
                    android:id="@+id/btn_add_quantity"
                    style="@style/ProductInfoButtonAdjust"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_add_primay" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_product_btn_cart_background"
                android:gravity="center">

                <TextView
                    android:id="@+id/add"
                    style="@style/ProductInfoFood.AddCart"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/AddCart"
                    android:textSize="15sp" />

                <TextView
                    style="@style/ProductInfoFood.AddCart"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_toEndOf="@id/add"
                    android:text="₫300.000" />
            </RelativeLayout>
        </RelativeLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/container">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarProductDetail"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_3"
                    app:contentScrim="@color/primary"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll"
                    app:titleEnabled="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:sliderAnimationDuration="3000"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderIndicatorAnimationDuration="3000"
                            app:sliderIndicatorEnabled="true"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMarginBottom="@dimen/_19sdp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorRadius="1.6dp"
                            app:sliderIndicatorSelectedColor="@color/primary"
                            app:sliderIndicatorUnselectedColor="@color/textSecondary" />

                    </FrameLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:contentInsetStart="0dp"
                        android:contentInsetLeft="0dp"
                        android:contentInsetEnd="0dp"
                        android:contentInsetRight="0dp"
                        app:contentInsetEnd="0dp"
                        app:contentInsetLeft="0dp"
                        app:contentInsetRight="0dp"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="@dimen/_12sdp">

                            <ImageView
                                android:id="@+id/btn_info_close"
                                style="@style/ProductInfoClose"
                                android:layout_gravity="center_vertical|start"
                                android:background="@{ viewModel.isToolbarExpand ? @drawable/ic_close_dart : @drawable/ic_close_light}"
                                android:contentDescription="@string/app_name"
                                android:onClick="@{v->viewModel.goBack()}" />

                            <com.diadiem.pos_components.PTextView
                                visibleObject="@{!viewModel.isToolbarExpand}"
                                android:layout_width="@dimen/_160sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@{`Pho Dac Biet`,default=`Name`}"
                                android:textAlignment="center"
                                app:useFontStyle="bold"
                                app:useTextColor="color2"
                                app:useTextHeader="h1"
                                tools:textColor="@color/color_2" />
                        </FrameLayout>

                    </androidx.appcompat.widget.Toolbar>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@{ viewModel.isToolbarExpand ? @drawable/bg_product_detail_expand : @drawable/bg_product_detail_default}"
                android:overScrollMode="never"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_product_info_background"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            style="@style/ProductInfoPart">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.diadiem.pos_components.PTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:layout_weight="1"
                                    android:maxWidth="@dimen/_200sdp"
                                    android:text="Pho Dac Biet"
                                    app:useFontStyle="bold"
                                    app:useTextColor="color3"
                                    app:useTextHeader="h2" />

                                <com.diadiem.pos_components.PTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:text="79.000₫"
                                    app:useFontStyle="bold"
                                    app:useTextColor="color3"
                                    app:useTextHeader="h2" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.diadiem.pos_components.PTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_20sdp"
                                    android:layout_weight="1"
                                    android:text="@string/FoodDescription"
                                    app:useFontStyle="normal"
                                    app:useTextColor="color6"
                                    app:useTextHeader="h4" />

                                <com.diadiem.pos_components.PTextView
                                    bindStrike="@{true}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:height="20dp"
                                    android:foreground="@drawable/bg_strike_through"
                                    android:text="85.000"
                                    app:useFontStyle="normal"
                                    app:useTextColor="color6"
                                    app:useTextHeader="h4" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/shape_background_p"
                                    android:gravity="center">

                                    <com.diadiem.pos_components.PTextView
                                        style="@style/ProductInfoP"
                                        android:text="P5" />
                                </LinearLayout>

                                <com.diadiem.pos_components.PTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4 kg/bag"
                                    app:useFontStyle="normal"
                                    app:useTextColor="color6"
                                    app:useTextHeader="h4" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/ProductInfoPart">

                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/SizeOption"
                                app:useTextColor="color3"
                                app:useTextHeader="h2"
                                app:useFontStyle="bold"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerSizeOption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>


                        <View style="@style/OptionDivider" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/ProductInfoOptionAsk"
                            android:layout_marginTop="26dp"
                            android:text="@string/RequiredOption" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerCookOption"
                            style="@style/ProductRecyclerOptions"
                            tools:itemCount="2" />

                        <View style="@style/OptionDivider" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/ProductInfoOptionAsk"
                            android:layout_marginTop="26dp"
                            android:text="@string/OptionalOption" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSauceOption"
                            style="@style/ProductRecyclerOptions"
                            tools:itemCount="2" />

                        <View style="@style/OptionDivider" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/ProductInfoOptionAsk"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="26dp"
                            android:text="@string/ExtraOption"
                            android:textSize="15sp" />

                        <include
                            android:id="@+id/layout_extra_option"
                            layout="@layout/view_extra_option" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="26dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="4dp"
                                android:src="@drawable/ic_note" />

                            <com.diadiem.pos_components.PTextView
                                style="@style/ProductInfoFood.FixedSizeMediumSmall"
                                android:layout_marginEnd="7dp"
                                android:text="@string/SpecialInstructions" />

                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/optional"
                                app:useFontStyle="normal"
                                app:useTextColor="color6"
                                app:useTextHeader="h4" />
                        </LinearLayout>

                        <EditText style="@style/ProductInfoNote" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>