<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.product.temporary_style.TemporaryStyleVM" />
    </data>

    <LinearLayout style="@style/RootLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.diadiem.pos_components.PTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:useFontStyle="semi_bold"
                app:useTextColor="color5"
                app:useTextHeader="h3"
                android:layout_marginStart="@dimen/_18sdp"
                tools:text="WHICH KIND OF SAUCE YOU WOULD LIKE TO?"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/temporary_sauce_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:orientation="vertical"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_temporary_variant_sauce"/>
        </LinearLayout>
    </LinearLayout>
</layout>