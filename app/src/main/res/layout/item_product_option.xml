<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="com.hanheldpos.data.api.pojo.product.ProductOption" />

    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.diadiem.pos_components.PRadioButton
            android:id="@+id/radio_btn_select"
            style="@style/ProductInfoSelection"
            android:checked="@{item.checked,default=false}"
            android:layout_marginStart="12dp"
            android:text="@{item.name,default=`@string/Option`}" />
    </LinearLayout>
</layout>