<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.menu.option.report.current_drawer.CurrentDrawerVM" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/RootLayout"
            android:background="@color/color_2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp">

                <ImageButton
                    style="@style/MaterialButton.Icon"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|start"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@color/textPrimary"
                    android:onClick="@{v -> viewModel.backPress()}"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_arrow_back_ios_13"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    style="@style/CartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.diadiem.pos_components.PTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_drawer"
                        app:useTextColor="color4"
                        app:useTextHeader="h4"
                        app:useFontStyle="bold"/>

                    <com.diadiem.pos_components.PTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" (CashDrawer/1471)"
                        android:textColor="@color/textSecondary"
                        app:useTextHeader="h4" />
                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/color_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_17sdp"
                android:orientation="vertical">

                <com.diadiem.pos_components.PTextView
                    style="@style/CartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/drawer_description"
                    android:textAllCaps="true"
                    app:useFontStyle="bold"
                    app:useTextColor="color4"
                    app:useTextHeader="h6" />

                <com.diadiem.pos_components.PTextInputEditText
                    android:id="@+id/noteInput"
                    style="@style/BaseTextInput"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:background="@drawable/bg_outline"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/enter_description"
                    android:inputType="text|textMultiLine"
                    android:maxLines="4"

                    android:minHeight="@dimen/_66sdp"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_7sdp"
                    app:ipt_useFontStyle="normal"
                    app:ipt_useHintTextColor="color8"
                    app:ipt_useTextColor="color4"
                    app:ipt_useTextHeader="h5" />

                <com.diadiem.pos_components.PTextView
                    style="@style/CartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/_31sdp"
                    android:text="@string/current_drawer"
                    android:textAllCaps="true"
                    app:useFontStyle="bold"
                    app:useTextColor="color4"
                    app:useTextHeader="h6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/started"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="23/12/2021"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="05:30"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/starting_cash"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="0"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/paid_in_out"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="0"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/cash_sales"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="0"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/cash_refunds"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="0"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="@string/expected_in_drawer"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/CartTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_11sdp"
                            android:text="0"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="top"
                        android:background="@color/color_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnEndDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_weight="1"
                android:background="@color/color_11"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="@{(v)-> viewModel.onOpenEndDrawer()}"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.diadiem.pos_components.PTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/end_drawer"
                    app:useFontStyle="bold"
                    app:useTextColor="color0"
                    app:useTextHeader="h5" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/btnPayInOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:background="@color/color_11"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{(v)-> viewModel.onOpenPayInPayOut()}"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.diadiem.pos_components.PTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pay_in_out"
                    app:useFontStyle="bold"
                    app:useTextColor="color0"
                    app:useTextHeader="h5" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>