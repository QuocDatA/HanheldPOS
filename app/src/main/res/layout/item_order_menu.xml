<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.hanheldpos.model.home.MenuModel" />
    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name, default=`Menu`}"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@{item.selected ? @color/primary : @color/textPrimary}"
            tools:textColor="@color/primary"
            android:background="@{item.selected ? @drawable/bg_order_menu : null}"
            tools:background="@drawable/bg_order_menu"
            />


    </FrameLayout>
</layout>