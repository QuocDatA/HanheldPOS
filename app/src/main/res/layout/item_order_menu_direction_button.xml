<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.hanheldpos.model.home.order.menu.MenuModeViewType" />

        <variable
            name="item"
            type="com.hanheldpos.model.home.order.menu.OrderMenuItem" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_1sdp"
        android:background="@{@color/_EEEEEE}"
        android:clickable="true"
        android:elevation="0dp"
        android:focusable="true"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:rippleColor="@{@color/color_2}">


        <RelativeLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btnPrevPage"
                visibleObject="@{item.uiType == MenuModeViewType.PrevButton}"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@{@drawable/ic_direction_up}" />

            <ImageView
                android:id="@+id/btnNextPage"
                visibleObject="@{item.uiType == MenuModeViewType.NextButton}"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@{ @drawable/ic_direction_down }" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>