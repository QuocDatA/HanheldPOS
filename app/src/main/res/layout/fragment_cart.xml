<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.cart.CartVM" />

        <variable
            name="cartDataVM"
            type="com.hanheldpos.ui.screens.cart.CartDataVM" />
    </data>

    <LinearLayout
        style="@style/RootLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_10"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                android:background="@color/color_2">

                <ImageButton
                    style="@style/MaterialButton.Icon"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|start"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@color/textPrimary"
                    android:onClick="@{v -> viewModel.backPress()}"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_arrow_back_ios_13"
                    tools:ignore="ContentDescription" />

                <com.diadiem.pos_components.PTextView
                    style="@style/CartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cart" />

                <com.diadiem.pos_components.PTextView
                    style="@style/CartDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{v->viewModel.deleteCart()}"
                    android:text="@string/delete_cart" />
            </FrameLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/dining_option"
                            app:useFontStyle="bold"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/dining_option_recycler_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_dining_option" />

                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_11sdp">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/customer_info"
                            app:useFontStyle="bold"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            android:focusable="true"
                            android:clickable="true"
                            android:onClick="@{v->viewModel.onOpenAddCustomer()}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:text="@string/add_customer"
                            app:useTextColor="color0"
                            app:useTextHeader="h5" />

                    </LinearLayout>

                    <LinearLayout
                        visibleObject="@{cartDataVM.diningOptionLD.orderNo == 2}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp" />

                        <LinearLayout
                            style="@style/SingleLineItemCart"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_11sdp">

                            <ImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:src="@drawable/ic_clock" />

                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/asap_20_mins"
                                app:useFontStyle="bold"
                                app:useTextColor="color4"
                                app:useTextHeader="h5" />

                            <androidx.legacy.widget.Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_9sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:scaleX="-1"
                                android:src="@drawable/ic_baseline_arrow_back_ios_13"
                                app:tint="@color/color_9" />

                        </LinearLayout>
                    </LinearLayout>


                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="0dp">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:src="@drawable/ic_note"
                            app:tint="@color/color_0" />

                        <com.diadiem.pos_components.PTextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:focusableInTouchMode="true"
                            android:hint="@string/special_instruction_for_order"
                            android:paddingVertical="@dimen/_11sdp"
                            app:ipt_useTextColor="color9"
                            app:ipt_useTextHeader="h5" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_10sdp">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/items"
                            app:useFontStyle="bold"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_9sdp"
                            android:onClick="@{v -> viewModel.backPress()}"
                            android:text="@string/add_items"
                            app:useTextColor="color0"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/productRecyclerView"
                        style="@style/SingleLineItemCart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:paddingVertical="0dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_cart_product" />

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_9sdp"
                        android:paddingVertical="@dimen/_8sdp">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/sub_total"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            priceView="@{cartDataVM.cartModelLD.subTotal}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:useTextColor="color4"
                            app:useTextHeader="h5"
                            tools:text="50.000" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/color_10" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_9sdp">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/discount"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{()->viewModel.openDiscount()}"
                            android:text="@string/add_discount"
                            app:useTextColor="color0"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/other_fees"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:src="@drawable/ic_info" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            priceView="@{cartDataVM.cartModelLD.fee}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_9sdp"
                            app:useTextColor="color4"
                            app:useTextHeader="h5"
                            tools:text="50.000" />
                    </LinearLayout>

                    <LinearLayout
                        visibleObject="@{cartDataVM.diningOptionLD.orderNo == 2}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp" />

                        <LinearLayout

                            style="@style/SingleLineItemCart"
                            android:orientation="horizontal">

                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:text="@string/door_to_door"
                                app:useTextColor="color4"
                                app:useTextHeader="h5" />

                            <androidx.legacy.widget.Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:drawablePadding="0dp"
                                android:theme="@style/SCBSwitch" />
                        </LinearLayout>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp" />

                        <LinearLayout

                            style="@style/SingleLineItemCart"
                            android:orientation="horizontal">

                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_9sdp"
                                android:text="@string/plastic_cutlery"
                                app:useTextColor="color4"
                                app:useTextHeader="h5" />

                            <androidx.legacy.widget.Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_9sdp"
                                android:drawablePadding="0dp"
                                android:theme="@style/SCBSwitch" />
                        </LinearLayout>
                    </LinearLayout>


                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp" />

                    <LinearLayout
                        style="@style/SingleLineItemCart"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_10sdp">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_9sdp"
                            android:text="@string/total"
                            app:useFontStyle="semi_bold"
                            app:useTextColor="color4"
                            app:useTextHeader="h4" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            priceView="@{cartDataVM.cartModelLD.lineTotal}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_9sdp"
                            app:useFontStyle="semi_bold"
                            app:useTextColor="color4"
                            app:useTextHeader="h4"
                            tools:text="100.000" />
                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_4sdp" />
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnPaymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/imgPayment"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_payment" />

                <com.diadiem.pos_components.PTextView
                    android:id="@+id/tvPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:text="Payment Method"
                    app:useTextColor="color4"
                    app:useTextHeader="h5" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_8sdp"
                android:background="@color/color_10" />

            <LinearLayout
                android:id="@+id/btnAddDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{()->viewModel.openDiscount()}"
                android:padding="@dimen/_12sdp">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:src="@drawable/ic_discount" />

                <com.diadiem.pos_components.PTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:text="@string/add_discount"
                    app:useTextColor="color4"
                    app:useTextHeader="h5" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp">

            <com.diadiem.pos_components.PMaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_0"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="@string/bill"
                android:textAllCaps="true"
                app:pbtn_useFontStyle="bold"
                app:pbtn_useTextColor="color2"
                app:pbtn_useTextHeader="h5" />
        </LinearLayout>
    </LinearLayout>
</layout>