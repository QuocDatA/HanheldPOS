<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isSelected"
            type="Boolean" />
        <variable
            name="isDisable"
            type="Boolean"
            />
        <import type="com.diadiem.pos_components.enumtypes.TextColorEnum"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_51sdp"
        android:layout_height="wrap_content"
        android:backgroundTint="@{ isDisable ? @color/color_10 : ( isSelected ? @color/color_0 : @color/color_2) }"
        app:cardElevation="0dp"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_6sdp"

        >
        <com.diadiem.pos_components.PTextView
            android:id="@+id/nameVariant"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:useTextHeader="h6"
            app:useFontStyle="semi_bold"
            android:textColor="@{ isDisable ? @color/color_9 : ( isSelected ? @color/color_2 : @color/color_5) }"

            />
    </androidx.cardview.widget.CardView>
</layout>