<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.hanheldpos.model.home.order.category.CategoryModeViewType" />

        <variable
            name="item"
            type="com.hanheldpos.data.api.pojo.order.CategoryItem" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp">

        <FrameLayout
            visibleObject="@{ item.uiType == CategoryModeViewType.Empty }"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            >
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                app:useTextHeader="h3"
                android:visibility="invisible"
                />
        </FrameLayout>

        <LinearLayout
            visibleObject="@{ item.uiType == CategoryModeViewType.DirectionButton }"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dirUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/_EEEEEE"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="0dp"
                app:rippleColor="@color/color_2">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/ic_direction_up" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.legacy.widget.Space
                android:layout_width="@dimen/_6sdp"
                android:layout_height="wrap_content" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dirDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/_EEEEEE"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="0dp"
                app:rippleColor="@color/color_2">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/ic_direction_down" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnMain"
            backColor="@{item.color}"
            visibleObject="@{ item.uiType == CategoryModeViewType.Category }"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_2"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="0dp"
            app:rippleColor="@color/color_2">

            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLines="1"
                android:minEms="7"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:text="@{item.title,default=`Category`}"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:useFontStyle="bold"
                app:useTextColor="color2"
                app:useTextHeader="h3" />


        </com.google.android.material.card.MaterialCardView>


    </FrameLayout>

</layout>