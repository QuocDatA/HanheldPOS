<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.hanheldpos.ui.screens.product.adapter.modifier.ModifierSelectedItemModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@{item.quantity > 0 ? @color/color_1 : @color/color_10}"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_5sdp"
            android:gravity="center"
            android:paddingVertical="@dimen/_3sdp">

            <FrameLayout
                android:id="@+id/btnRemoveQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quantity_btn"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@{item.quantity > 0 ? @drawable/ic_remove_primary : @drawable/ic_remove_disable }" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.diadiem.pos_components.PTextView
                    style="@style/OptionItemTitle"
                    android:layout_width="wrap_content"
                    android:id="@+id/modifier_title"
                    android:layout_height="wrap_content"
                    android:text="@{item.realItem.modifier}"
                    tools:text="Test"
                    marquee="@{true}"
                    android:textColor="@{item.quantity > 0 ? @color/color_2 :  @color/color_4 }" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center">

                    <com.diadiem.pos_components.PTextView
                        style="@style/OptionItemTitle"
                        priceView="@{item.realItem.price}"
                        visibleObject="@{item.realItem.price > 0}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Test"

                        android:textColor="@{item.quantity > 0 ? @color/color_2 :  @color/color_4 }" />

                    <com.diadiem.pos_components.PTextView
                        style="@style/OptionItemTitle"
                        visibleObject="@{item.quantity > 0}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`(` + item.quantity + `)`}"
                        app:useTextColor="color2" />
                </LinearLayout>


            </LinearLayout>


            <FrameLayout
                android:id="@+id/btnAddQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_quantity_btn">

                <ImageView
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_4sdp"
                    android:src="@drawable/ic_add_primary" />
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>