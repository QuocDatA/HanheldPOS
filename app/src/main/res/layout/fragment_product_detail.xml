<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.hanheldpos.model.home.order.combo.ItemActionType" />

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.product.ProductDetailVM" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ProductDetailRoot"
        android:orientation="vertical">

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/productInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/toolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    style="@style/ProductDetailCloseBtn"
                    android:layout_gravity="end">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.onBack()}"
                        android:padding="@dimen/_8sdp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_close_light" />
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_9sdp"
                android:paddingVertical="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/toolbarLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.diadiem.pos_components.PTextView
                        android:id="@+id/nameProduct"
                        style="@style/ProductDetailTitle"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:text="@{viewModel.orderItemModel.orderName}"
                        app:useFontStyle="normal"
                        tools:text="Produc name" />

                    <com.diadiem.pos_components.PTextView
                        style="@style/ProductDetailPrice"
                        priceView="@{viewModel.orderItemModel.priceRegular}"
                        tools:text="10,000" />
                </LinearLayout>

                <com.diadiem.pos_components.PTextView
                    style="@style/ProductDetailSku"
                    visibleObject="@{viewModel.orderItemModel.orderSku}"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:background="@drawable/bg_food_detail_text"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_1sdp"
                    android:text="@{viewModel.orderItemModel.orderSku}" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/productInfo"
            app:layout_constraintBottom_toTopOf="@id/bottomAction"
            android:layout_above="@+id/bottomAction"
            android:layout_below="@+id/productInfo"
            android:background="@color/color_2"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/color_4"

                app:tabTextAppearance="@style/ProductDetailTabTitle" />

            <include
                layout="@layout/divider_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/optionContainer"
                useInputEnable="@{false}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/bottomAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/noteProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_2"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp"
                app:layout_constraintBottom_toTopOf="@+id/dividerActin"
                app:layout_constraintTop_toBottomOf="@+id/tabLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:src="@drawable/ic_note" />

                    <com.diadiem.pos_components.PTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:text="Special Instructions"
                        app:useFontStyle="bold"
                        app:useTextColor="color5"
                        app:useTextHeader="h6" />

                    <com.diadiem.pos_components.PTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Optional"
                        app:useFontStyle="normal"
                        app:useTextColor="color8"

                        app:useTextHeader="h7" />
                </LinearLayout>

                <com.diadiem.pos_components.PTextInputEditText
                    style="@style/BaseTextInput"
                    android:id="@+id/noteInput"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:background="@drawable/bg_outline"
                    android:focusableInTouchMode="true"
                    android:hint="@string/special_instructions"
                    android:inputType="text"
                    android:focusable="true"
                    android:minHeight="@dimen/_40sdp"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:paddingVertical="@dimen/_7sdp"
                    android:text="@={viewModel.orderItemModel.note}"
                    app:ipt_useFontStyle="normal"
                    app:ipt_useHintTextColor="color8"
                    app:ipt_useTextColor="color4"
                    app:ipt_useTextHeader="h5" />
            </LinearLayout>

            <include
                android:id="@+id/dividerActin"
                layout="@layout/divider_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintBottom_toTopOf="@+id/actionBar" />

            <RelativeLayout
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/color_2"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnReduceQuantity"
                        style="@style/ProductDetailBtnQuantity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"

                        android:onClick="@{v -> viewModel.onQuantityRemoved()}"
                        android:src="@{ viewModel.minQuantity &lt; viewModel.numberQuantity ? @drawable/ic_remove_primary : @drawable/ic_remove_disable}"
                        tools:ignore="ContentDescription" />

                    <com.diadiem.pos_components.PTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_13sdp"
                        android:text="@{String.valueOf(viewModel.numberQuantity)}"
                        app:useFontStyle="normal"
                        app:useTextColor="color5"
                        app:useTextHeader="h3" />

                    <ImageView
                        android:id="@+id/btnIncreaseQuantity"
                        style="@style/ProductDetailBtnQuantity"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:onClick="@{v -> viewModel.onQuantityAdded()}"
                        android:src="@{viewModel.numberQuantity &lt; viewModel.maxQuantity ? @drawable/ic_add_primary : @drawable/ic_add_disable}"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/color_0"
                    android:clickable="true"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:minWidth="@dimen/_95sdp"
                    android:onClick="@{v->viewModel.onAddCart()}"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:rippleColor="@color/color_2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_12sdp">

                        <com.diadiem.pos_components.PTextView
                            style="@style/ProductDetailText"
                            android:text="@{viewModel.numberQuantity > 0 ? ( viewModel.actionType == ItemActionType.Add ? `Add` : `Update` ) : `Remove`}"
                            android:textAllCaps="true"
                            app:useFontStyle="bold"
                            app:useTextColor="color2"
                            app:useTextHeader="h5" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/ProductDetailText"
                            priceView="@{viewModel.totalPriceLD}"
                            visibleObject="@{viewModel.totalPriceLD > 0}"
                            android:layout_marginStart="@dimen/_25sdp"
                            app:useFontStyle="bold"
                            app:useTextColor="color2"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>