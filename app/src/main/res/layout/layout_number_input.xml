<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.hanheldpos.ui.input.KeyBoardVM" />


        <import type="com.hanheldpos.model.keyboard.KeyBoardType" />

        <import type="android.view.View" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/color_10"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_7sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="7" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="4" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="1" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:layout_weight="1.5"
                            android:onClick="@{v->viewModel.switchKeyBoardType()}"
                            android:text="abc"
                            android:visibility="@{viewModel.keyBoardType == KeyBoardType.NumberOnly ? View.GONE : View.VISIBLE}" />

                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:layout_weight="1.5"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="8" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:layout_weight="1.5"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="5" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:layout_weight="1.5"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="2" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp" />

                        <com.diadiem.pos_components.PTextView
                            style="@style/NumberPad"
                            android:layout_weight="1.5"
                            android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                            android:text="0"
                            android:visibility="@{viewModel.keyBoardType == KeyBoardType.NumberOnly ? View.GONE : View.VISIBLE}" />

                    </LinearLayout>
                </LinearLayout>

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberPad"
                    android:layout_weight="1.5"
                    android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                    android:text="0"
                    android:visibility="@{viewModel.keyBoardType == KeyBoardType.NumberOnly ? View.VISIBLE : View.GONE}" />
            </LinearLayout>


            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberPad"
                    android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                    android:text="9" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberPad"
                    android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                    android:text="6" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberPad"
                    android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                    android:text="3" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberPad"
                    android:onClick="@{(view) -> viewModel.concatenateInputString(view)}"
                    android:text="00" />
            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <ImageView
                    style="@style/NumberPad"
                    android:layout_weight="2"
                    android:onClick="@{() -> viewModel.delete()}"
                    android:paddingVertical="@dimen/_10sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_backspace" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <com.diadiem.pos_components.PTextView
                    style="@style/NumberOk"
                    android:layout_width="match_parent"
                    android:layout_weight="1.75"
                    android:onClick="@{v->viewModel.listener.onComplete()}"
                    android:text="OK" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp" />

                <com.diadiem.pos_components.PTextView
                    android:id="@+id/cancelBtn"
                    style="@style/NumberPad"
                    android:onClick="@{v->viewModel.listener.onCancel()}"
                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>