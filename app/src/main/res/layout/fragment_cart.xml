<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.cart.CartVM" />
    </data>

    <LinearLayout
        style="@style/RootLayout">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            >
            <ImageButton
                style="@style/MaterialButton.Icon"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:src="@drawable/ic_baseline_arrow_back_ios_13"
                android:backgroundTint="@color/textPrimary"
                android:onClick="@{v -> viewModel.backPress()}"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                tools:ignore="ContentDescription" />
            <com.diadiem.pos_components.PTextView
                style="@style/CartTitle"
                android:text="@string/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.diadiem.pos_components.PTextView
                android:focusable="true"
                android:clickable="true"
                android:onClick="@{v->viewModel.deleteCart()}"
                style="@style/CartDelete"
                android:text="@string/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_6sdp"
            android:background="@color/color_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_7sdp">
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deliver_to"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dining_option_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_9sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_gravity="center"
                tools:listitem="@layout/item_dining_option"
                tools:itemCount="3"
                />
            
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/color_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_11sdp">
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customer_info"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useTextHeader="h5"
                app:useTextColor="color0"
                android:text="@string/add_customer"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/color_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_note"
                android:layout_marginStart="@dimen/_9sdp"
                app:tint="@color/color_0" />
            <com.diadiem.pos_components.PTextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_11sdp"
                android:hint="@string/special_instruction_for_order"
                android:layout_marginStart="@dimen/_5sdp"
                app:ipt_useTextColor="color9"
                app:ipt_useTextHeader="h5"
                android:focusableInTouchMode="true"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="@color/color_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/_32sdp">
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/items"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useTextHeader="h5"
                app:useTextColor="color0"
                android:text="@string/add_items"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/color_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_8sdp">
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sub_total"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useTextHeader="h3"
                app:useTextColor="color5"
                tools:text="50.000"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/color_9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            >
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useTextHeader="h3"
                app:useTextColor="color5"
                android:text="@string/add_items"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp">
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/items"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                android:layout_gravity="center"
                app:useFontStyle="bold"
                android:layout_marginStart="@dimen/_9sdp"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:useTextHeader="h3"
                app:useTextColor="color5"
                android:text="@string/add_items"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                />
        </LinearLayout>
    </LinearLayout>
</layout>