<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <variable
        name="viewModel"
        type="com.hanheldpos.ui.screens.discount.discounttype.discount_code.DiscountCodeVM" />
    </data>
    <RelativeLayout
        style="@style/RootLayout"
        android:layout_height="match_parent"
        >
        <ProgressBar
            visibleObject="@{viewModel.isLoading()}"
            android:indeterminateTint="@color/color_0"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <androidx.recyclerview.widget.RecyclerView
            visibleObject="@{!viewModel.isLoading()}"
            android:id="@+id/listDiscountCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:itemCount="3"
            tools:listitem="@layout/item_discount_code"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            />
    </RelativeLayout>
</layout>