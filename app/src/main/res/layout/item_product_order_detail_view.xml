<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.hanheldpos.utils.PriceUtils" />

        <import type="android.text.TextUtils" />

        <import type="com.hanheldpos.model.product.ProductType" />

        <import type="com.hanheldpos.model.product.ExtraConverter" />

        <variable
            name="item"
            type="com.hanheldpos.model.order.ProductChosen" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.diadiem.pos_components.PTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="@{String.valueOf(item.quantity)+`x`}"
                app:useTextColor="color4"
                app:useTextHeader="h5"
                tools:text="1x" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <com.diadiem.pos_components.PTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{item.name1}"
                                app:useTextColor="color4"
                                app:useTextHeader="h5"
                                tools:text="Pho Bo Tai" />
                            <com.diadiem.pos_components.PTextView
                                visibleObject="@{!item.serviceFeeList.empty || !item.taxFeeList.empty || !item.surchargeFeeList.empty}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{`(` + PriceUtils.INSTANCE.formatStringPrice(item.subtotal) + `)`}"
                                app:useTextColor="color4"
                                app:useTextHeader="h5"
                                android:maxLines="1"
                                tools:text="(10,000)" />
                        </LinearLayout>


                        <com.diadiem.pos_components.PTextView
                            priceView="@{item.lineTotal}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            app:useTextColor="color4"
                            app:useTextHeader="h5"
                            tools:text="137.000" />
                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center_vertical"
                        android:id="@+id/priceTextView"
                        visibleObject="@{item.productTypeId == ProductType.BUNDLE.value}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/base_price"
                            android:textAlignment="textEnd"
                            app:useTextColor="color7"
                            app:useTextHeader="h7" />

                        <androidx.legacy.widget.Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.diadiem.pos_components.PTextView
                            priceView="@{item.price}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:useTextColor="color7"
                            app:useTextHeader="h7"
                            tools:text="240.000" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/productGroupRecyclerView"
                        visibleObject="@{item.productTypeId == ProductType.BUNDLE.value || item.buyXGetY != null}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/item_group_child_order_detail_view" />

                    <include
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{item.variantList != null &amp;&amp; !item.variantList.empty}"
                        app:lineText="@{ExtraConverter.INSTANCE.variantStr(item.variantList)}" />

                    <include
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{item.modifierList != null &amp;&amp; !item.modifierList.empty}"
                        app:lineText="@{ExtraConverter.INSTANCE.modifierOrderStr(item.modifierList)}" />

                    <include
                        android:id="@+id/discountDetail"
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{(item.discountList != null &amp;&amp; !item.discountList.empty) || (item.compVoidList != null &amp;&amp; !item.compVoidList.empty ) }"
                        app:isDiscount="@{true}"
                        app:lineText="@{`Discount : ` }"
                        app:priceDiscMinus="@{item.discountTotalPrice}" />

                    <include
                        android:id="@+id/taxDetail"
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{(item.taxFeeList != null &amp;&amp; !item.taxFeeList.empty) }"
                        app:lineText="@{`Tax (`+ PriceUtils.INSTANCE.formatStringPrice(item.taxTotalPrice) + `)` }" />

                    <include
                        android:id="@+id/serviceDetail"
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{(item.serviceFeeList != null &amp;&amp; !item.serviceFeeList.empty) }"
                        app:lineText="@{`Service (`+ PriceUtils.INSTANCE.formatStringPrice(item.taxTotalPrice) + `)` }" />

                    <include
                        android:id="@+id/surchargeDetail"
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{(item.surchargeFeeList != null &amp;&amp; !item.surchargeFeeList.empty) }"
                        app:lineText="@{`Surcharge (`+ PriceUtils.INSTANCE.formatStringPrice(item.taxTotalPrice) + `)` }" />

                    <include
                        layout="@layout/order_product_detail_view_line"
                        visibleObject="@{item.note!=null &amp;&amp; !TextUtils.isEmpty(item.note) }"
                        app:isNote="@{true}"
                        app:lineText="@{item.note}" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>