<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.hanheldpos.ui.screens.cart.payment.input.PaymentInputVM" />
        <variable
            name="keyboardVM"
            type="com.hanheldpos.ui.input.KeyBoardVM" />
        <variable
            name="paymentMethod"
            type="com.hanheldpos.data.api.pojo.payment.PaymentMethodResp" />
    </data>

    <RelativeLayout
        android:background="#A6000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/keyBoardContainer"
            android:layout_marginBottom="@dimen/_80sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.diadiem.pos_components.PTextView
                    android:id="@+id/paymentInputTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    app:useFontStyle="bold"
                    app:useTextColor="color4"
                    app:useTextHeader="h4"
                    tools:text = "TIEN MAT"/>

                <com.diadiem.pos_components.PTextInputEditText
                    android:text="@{keyboardVM.input}"
                    android:id="@+id/numberPaymentInput"
                    style="@style/BaseTextInput"
                    android:layout_marginHorizontal="@dimen/_17sdp"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@drawable/bg_outline"
                    android:focusableInTouchMode="true"
                    android:hint="Enter amount"
                    android:focusable="false"
                    android:paddingHorizontal="@dimen/_13sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    app:ipt_useFontStyle="normal"
                    app:ipt_useHintTextColor="color8"
                    app:ipt_useTextColor="color4"
                    app:ipt_useTextHeader="h5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:onClick="@{v->viewModel.onCancel()}"
                        android:id="@+id/cancelBtn"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_outline"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <com.diadiem.pos_components.PTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            app:useFontStyle="normal"
                            app:useTextColor="color4"
                            app:useTextHeader="h5" />
                    </LinearLayout>

                    <LinearLayout
                        android:onClick="@{v->viewModel.onComplete()}"
                        android:id="@+id/acceptBtn"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_outline"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center">

                        <com.diadiem.pos_components.PTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ok"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            app:useFontStyle="bold"
                            app:useTextColor="color0"
                            app:useTextHeader="h5" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/keyBoardContainer"
            layout="@layout/layout_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:keyboardVM="@{keyboardVM}" />

    </RelativeLayout>
</layout>